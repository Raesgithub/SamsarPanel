    void CancelForm()
    {
        return;
    }

    async Task HandleSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;

        if (selectedFile != null)
        {
            var format = selectedFile.ContentType;
            using var stream = selectedFile.OpenReadStream(1024 * 1024 * 15);
            var buffer = new byte[selectedFile.Size];
            await stream.ReadAsync(buffer, 0, buffer.Length);
            PreviewImage = $"data:{format};base64,{Convert.ToBase64String(buffer)}";
        }
    }



