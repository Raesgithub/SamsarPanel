@page "/Cpanel/Slider/"
@using Domain.Models.panel
@using Domain.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db
@inject IWebHostEnvironment Env

<h3>مدیریت اسلایدرها</h3>

<div class="row">
    <div class="col-12 mb-3">
        <button class="btn btn-success" @onclick="AddNew">اسلایدر جدید</button>
    </div>
</div>

<div class="row">
    @foreach (var item in Sliders)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top" style="height:200px;object-fit:cover;" alt="@item.Bio">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <button class="btn btn-info btn-sm me-2" @onclick="() => Edit(item.Id)">ویرایش</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)">حذف</button>
                </div>
            </div>
        </div>
    }
</div>

@if (ShowForm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <h5>@(EditingSlider.Id == 0 ? "افزودن اسلایدر" : "ویرایش اسلایدر")</h5>
                <InputFile OnChange="HandleSelected" />
                <div class="mt-2 text-center">
                    <img src="@PreviewImage" style="max-width:100%; max-height:200px;" class="img-thumbnail" />
                </div>
                <InputText class="form-control mt-2" placeholder="عنوان (اختیاری)" @bind-Value="EditingSlider.Title" />
                <InputTextArea class="form-control mt-2" placeholder="توضیح (اختیاری)" @bind-Value="EditingSlider.Description" />
                <InputText class="form-control mt-2" placeholder="لینک دکمه (اختیاری)" @bind-Value="EditingSlider.LinkButton" />
                <div class="mt-2 text-end">
                    <button class="btn btn-secondary me-2" @onclick="CancelForm">انصراف</button>
                    <button class="btn btn-primary" @onclick="SaveSlider">ذخیره</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    List<Slider> Sliders = new List<Slider>();
    bool ShowForm = false;
    Slider EditingSlider = new Slider();
    IBrowserFile? selectedFile;
    string PreviewImage = "/images/default.jpg";

    protected override async Task OnInitializedAsync()
    {
        Sliders = await Db.Sliders.ToListAsync();
    }

    void AddNew()
    {
        EditingSlider = new Slider();
        PreviewImage = "/images/default.jpg";
        selectedFile = null;
        ShowForm = true;
    }

    void Edit(int id)
    {
        EditingSlider = Sliders.First(s => s.Id == id);
        PreviewImage = EditingSlider.ImageUrl;
        ShowForm = true;
    }

    void CancelForm()
    {
        ShowForm = false;
        EditingSlider = new Slider();
        selectedFile = null;
    }

    async Task HandleSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;

        if (selectedFile != null)
        {
            var format = selectedFile.ContentType;
            using var stream = selectedFile.OpenReadStream(1024 * 1024 * 15);
            var buffer = new byte[selectedFile.Size];
            await stream.ReadAsync(buffer, 0, buffer.Length);
            PreviewImage = $"data:{format};base64,{Convert.ToBase64String(buffer)}";
        }
    }

    async Task SaveSlider()
    {
        if (selectedFile != null)
        {
            var uploads = Path.Combine(Env.WebRootPath, "uploads");
            if (!Directory.Exists(uploads))
                Directory.CreateDirectory(uploads);

            var fileName = $"{Guid.NewGuid()}_{selectedFile.Name}";
            var filePath = Path.Combine(uploads, fileName);

            using var fs = new FileStream(filePath, FileMode.Create);
            await selectedFile.OpenReadStream().CopyToAsync(fs);

            EditingSlider.ImageUrl = $"/uploads/{fileName}";
        }

        if (EditingSlider.Id == 0)
        {
            Db.Sliders.Add(EditingSlider);
        }
        else
        {
            Db.Sliders.Update(EditingSlider);
        }

        await Db.SaveChangesAsync();
        Sliders = await Db.Sliders.ToListAsync();
        ShowForm = false;
    }

    async Task Delete(int id)
    {
        var slider = Sliders.FirstOrDefault(s => s.Id == id);
        if (slider != null)
        {
            Db.Sliders.Remove(slider);
            await Db.SaveChangesAsync();
            Sliders = await Db.Sliders.ToListAsync();
        }
    }
}
