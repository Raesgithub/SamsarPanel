@page "/Cpanel/Slider/"
@using Domain.Models.panel
@using Domain.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db
@inject IWebHostEnvironment Env

<h3>مدیریت اسلایدرها</h3>

<div class="row" style="float:left">
    <div class="col-12 mb-3">
        <a class="btn btn-success" href="/Cpanel/Slider/add">اسلایدر جدید</a>
    </div>
</div>

<div class="row">
    @foreach (var item in Sliders)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="/cpanel/assets/images/sliders/@item.ImageUrl" class="card-img-top" style="height:200px;object-fit:cover;" alt="@item.Alt">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <button class="btn btn-info btn-sm me-2" @onclick="() => Edit(item.Id)">ویرایش</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => Delete(item.Id)">حذف</button>
                </div>
            </div>
        </div>
    }
</div>

@if (ShowForm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <h5>@(EditingSlider.Id == 0 ? "افزودن اسلایدر" : "ویرایش اسلایدر")</h5>
                <InputFile OnChange="HandleSelected" />
                <div class="mt-2 text-center">
                    <img src="@PreviewImage" style="max-width:100%; max-height:200px;" class="img-thumbnail" />
                </div>
                <InputText class="form-control mt-2" placeholder="عنوان (اختیاری)" @bind-Value="EditingSlider.Title" />
                <InputTextArea class="form-control mt-2" placeholder="توضیح (اختیاری)" @bind-Value="EditingSlider.Description" />
                <InputText class="form-control mt-2" placeholder="لینک دکمه (اختیاری)" @bind-Value="EditingSlider.LinkButton" />
                <div class="mt-2 text-end">
                    <button class="btn btn-secondary me-2" @onclick="CancelForm">انصراف</button>
                    <button class="btn btn-primary">ذخیره</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    List<Slider> Sliders = new List<Slider>();
    bool ShowForm = false;
    Slider EditingSlider = new Slider();
    IBrowserFile? selectedFile;
    string PreviewImage = "/Skillup/assets/img/b-4.png";

    protected override async Task OnInitializedAsync()
    {
        Sliders = await Db.Sliders.ToListAsync();
    }



