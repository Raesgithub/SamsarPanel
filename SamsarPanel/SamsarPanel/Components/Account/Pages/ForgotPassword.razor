@page "/Account/ForgotPassword"
@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Application.Services
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using Domain.Data
@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Forgot your password?</PageTitle>

<h1>Forgot your password?</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm Model="Input" FormName="forgot-password" OnValidSubmit="OnValidSubmitAsync" method="post">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label for="email" class="form-label">Email</label>
                <ValidationMessage For="() => Input.Email" class="text-danger" />
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset password</button>
        </EditForm>
     </div>
</div>

@code {
    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    private async Task OnValidSubmitAsync()
    {
        EmailService emailService = new EmailService();
        string verificationCode = new Random().Next(100000, 999999).ToString();

        var res = emailService.SendEmail(
              Input.Email,
              "بازیابی رمز عبور OnLineChat",
             @"
<div style='font-family: Tahoma, Arial, sans-serif; direction: rtl; text-align: right; max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #e0e0e0; border-radius: 10px;'>
    <div style='text-align: center; margin-bottom: 30px;'>
        <h2 style='color: #1976d2; margin: 0;'>OnLineChat</h2>
        <p style='color: #666; margin: 5px 0;'>بازیابی رمز عبور حساب کاربری</p>
    </div>

    <div style='background-color: #f8f9fa; padding: 20px; border-radius: 8px; margin: 20px 0;'>
        <p style='margin: 0 0 15px 0; color: #333;'><strong>کاربر گرامی،</strong></p>
        <p style='margin: 0 0 15px 0; color: #333;'>برای بازیابی رمز عبور حساب کاربری خود در OnLineChat، لطفاً از کد تأیید زیر استفاده نمایید:</p>

        <div style='text-align: center; margin: 25px 0;'>
            <div style='display: inline-block; background-color: #1976d2; color: white; padding: 15px 30px; font-size: 24px; font-weight: bold; letter-spacing: 5px; border-radius: 8px;'>
                " + verificationCode + @"
            </div>
        </div>

        <p style='margin: 0 0 10px 0; color: #d32f2f; font-size: 14px;'><strong>توجه:</strong> این کد به درخواست شما برای بازیابی رمز عبور ایجاد شده است.</p>
        <p style='margin: 0 0 10px 0; color: #d32f2f; font-size: 14px;'>در صورت عدم درخواست بازیابی رمز عبور از سوی شما، این ایمیل را نادیده بگیرید.</p>
    </div>

    <div style='margin-top: 30px; padding-top: 20px; border-top: 1px solid #e0e0e0;'>
        <p style='margin: 0 0 10px 0; color: #666; font-size: 12px;'>این ایمیل به صورت خودکار ارسال شده است. لطفاً به آن پاسخ ندهید.</p>
        <p style='margin: 0; color: #666; font-size: 12px;'>© " + DateTime.Now.Year + @" - OnLineChat. کلیه حقوق محفوظ است.</p>
    </div>
</div>
"
          );
        return;
        var user = await UserManager.FindByEmailAsync(Input.Email);
        if (user is null || !(await UserManager.IsEmailConfirmedAsync(user)))
        {
            // Don't reveal that the user does not exist or is not confirmed
            RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
        }

        // For more information on how to enable account confirmation and password reset please
        // visit https://go.microsoft.com/fwlink/?LinkID=532713
        var code = await UserManager.GeneratePasswordResetTokenAsync(user);
        code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));
        var callbackUrl = NavigationManager.GetUriWithQueryParameters(
            NavigationManager.ToAbsoluteUri("Account/ResetPassword").AbsoluteUri,
            new Dictionary<string, object?> { ["code"] = code });

        await EmailSender.SendPasswordResetLinkAsync(user, Input.Email, HtmlEncoder.Default.Encode(callbackUrl));

        RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
    }

    private sealed class InputModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";
    }
}
